<%- include('../partials/user/header') %>

<style>
    .cart-page-wrapper {
        background: #f8f9fa;
        min-height: 100vh;
        padding: 2rem 0;
    }
    
    .cart-header {
        background: linear-gradient(135deg, #5a6c5d 0%, #3d4a3e 100%);
        padding: 3rem 0;
        margin-bottom: 2rem;
    }
    
    .cart-title {
        color: white;
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        margin: 0;
    }
    
    .cart-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }
    
    .cart-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    @media (min-width: 768px) {
        .cart-grid {
            grid-template-columns: 2fr 1fr;
        }
    }
    
    .cart-items-section {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
    
    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f0f0f0;
    }
    
    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2d3436;
        margin: 0;
    }
    
    .items-count {
        background: #5a6c5d;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
    }
    
    .cart-item-card {
        background: white;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        padding: 1.25rem;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
        position: relative;
    }
    
    .cart-item-card:hover {
        box-shadow: 0 4px 12px rgba(90, 108, 93, 0.15);
        border-color: #5a6c5d;
    }
    
    .item-content {
        display: flex;
        gap: 1.25rem;
        align-items: center;
    }
    
    .item-image-wrapper {
        width: 100px;
        height: 100px;
        flex-shrink: 0;
        border-radius: 8px;
        overflow: hidden;
        background: #f8f9fa;
        border: 1px solid #e9ecef;
    }
    
    .item-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .item-details {
        flex-grow: 1;
    }
    
    .item-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2d3436;
        margin: 0 0 0.5rem 0;
    }
    
    .item-price {
        color: #5a6c5d;
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
    }
    
    .quantity-section {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-top: 0.75rem;
    }
    
    .qty-btn {
        width: 32px;
        height: 32px;
        border: 1px solid #5a6c5d;
        background: white;
        color: #5a6c5d;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 700;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .qty-btn:hover:not(:disabled) {
        background: #5a6c5d;
        color: white;
    }
    
    .qty-btn:disabled {
        opacity: 0.4;
        cursor: not-allowed;
    }
    
    .qty-display {
        background: #5a6c5d;
        color: white;
        padding: 0.4rem 1rem;
        border-radius: 6px;
        font-weight: 700;
        min-width: 50px;
        text-align: center;
    }
    
    .item-total-price {
        font-weight: 700;
        color: #2d3436;
        margin-top: 0.5rem;
    }
    
    .remove-btn {
        position: absolute;
        top: 1rem;
        right: 1rem;
        width: 30px;
        height: 30px;
        border: none;
        background: #fee;
        color: #dc3545;
        border-radius: 50%;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .remove-btn:hover {
        background: #dc3545;
        color: white;
        transform: rotate(90deg);
    }

    /* BEAUTIFUL MODERN REMOVE BUTTON */
.remove-btn-new {
    position: absolute;
    top: 12px;
    right: 12px;
    display: flex;
    align-items: center;
    gap: 6px;
    background: #fee2e2;
    color: #dc2626;
    border: 1.5px solid #fca5a5;
    padding: 6px 12px;
    border-radius: 8px;
    font-size: 0.85rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 2px 6px rgba(220, 38, 38, 0.15);
    z-index: 10;
}

.remove-btn-new:hover {
    background: #dc2626;
    color: white;
    border-color: #dc2626;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(220, 38, 38, 0.3);
}

.remove-btn-new:hover .remove-text {
    color: white;
}

.remove-btn-new i {
    font-size: 1rem;
    transition: transform 0.2s ease;
}

.remove-btn-new:hover i {
    transform: scale(1.15);
}

.remove-text {
    color: #dc2626;
    transition: color 0.3s ease;
}

/* Optional: Smaller version on mobile */
@media (max-width: 768px) {
    .remove-btn-new {
        padding: 5px 10px;
        font-size: 0.8rem;
        gap: 4px;
    }
    .remove-text {
        display: none;
    }
}
    
    .order-summary {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        position: sticky;
        top: 1rem;
    }
    
    .summary-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2d3436;
        margin: 0 0 1.5rem 0;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f0f0f0;
    }
    
    .summary-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        color: #636e72;
    }
    
    .summary-row.total {
        font-size: 1.25rem;
        font-weight: 700;
        color: #2d3436;
        padding-top: 1rem;
        border-top: 2px solid #f0f0f0;
        margin-top: 1rem;
    }
    
    .total-amount {
        color: #5a6c5d;
    }
    
    .checkout-btn {
        width: 100%;
        background: #5a6c5d;
        color: white;
        padding: 1rem;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 1.5rem;
    }
    
    .checkout-btn:hover:not(:disabled) {
        background: #4a5a4d;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(90, 108, 93, 0.3);
    }
    
    .checkout-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }
    
    .continue-shopping {
        display: block;
        text-align: center;
        color: #5a6c5d;
        text-decoration: none;
        margin-top: 1rem;
        font-weight: 600;
        transition: color 0.2s ease;
    }
    
    .continue-shopping:hover {
        color: #4a5a4d;
    }
    
    .empty-cart-section {
        background: white;
        border-radius: 12px;
        padding: 4rem 2rem;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
    
    .empty-icon {
        font-size: 5rem;
        color: #dfe6e9;
        margin-bottom: 1.5rem;
    }
    
    .empty-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #2d3436;
        margin-bottom: 0.5rem;
    }
    
    .empty-text {
        color: #636e72;
        margin-bottom: 2rem;
    }
    
    .shop-btn {
        display: inline-block;
        background: #5a6c5d;
        color: white;
        padding: 0.875rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 700;
        transition: all 0.3s ease;
    }
    
    .shop-btn:hover {
        background: #4a5a4d;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(90, 108, 93, 0.3);
    }
