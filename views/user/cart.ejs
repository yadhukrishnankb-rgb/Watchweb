<script>
async function updateQuantity(productId, action) {
    try {
        const response = await fetch('/cart/update', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ productId, action })
        });

        const data = await response.json();

        if (data.success) {
            const item = document.querySelector(`[data-product-id="${productId}"]`);
            const qtyDisplay = item.querySelector('.quantity-display');
            const decreaseBtn = item.querySelector('.qty-btn:nth-child(1)'); // minus button
            const increaseBtn = item.querySelector('.qty-btn:nth-child(3)'); // plus button
            const totalPriceEl = item.querySelector('.item-total');

            // Update quantity display
            qtyDisplay.textContent = data.quantity;

            // Update subtotal
            totalPriceEl.textContent = `Subtotal: ₹${data.totalPrice.toLocaleString()}`;

            // DYNAMICALLY UPDATE BUTTON STATES
            if (data.quantity <= 1) {
                decreaseBtn.disabled = true;
            } else {
                decreaseBtn.disabled = false;
            }

            if (data.quantity >= data.stock) {
                increaseBtn.disabled = true;
            } else {
                increaseBtn.disabled = false;
            }

            // Update cart total
            updateCartTotal();

        } else {
            Swal.fire({
                icon: 'error',
                title: 'Oops!',
                text: data.message || 'Could not update quantity',
                timer: 2000
            });
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire('Error', 'Something went wrong. Please try again.', 'error');
    }
}

async function removeFromCart(productId) {
    const result = await Swal.fire({
        title: 'Remove item?',
        text: "This item will be removed from your cart",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#dc3545',
        cancelButtonColor: '#95a5a6',
        confirmButtonText: 'Yes, remove it!'
    });

    if (!result.isConfirmed) return;

    try {
        const response = await fetch(`/cart/remove/${productId}`, {
            method: 'DELETE'
        });

        const data = await response.json();

        if (data.success) {
            const item = document.querySelector(`[data-product-id="${productId}"]`);
            item.style.transition = 'all 0.4s ease';
            item.style.opacity = '0';
            item.style.transform = 'translateX(-20px)';

            setTimeout(() => {
                item.remove();
                updateCartTotal();

                // Reload if cart empty
                if (!document.querySelector('.cart-item')) {
                    location.reload();
                }
            }, 400);

            Swal.fire({
                icon: 'success',
                title: 'Removed!',
                text: 'Item removed from cart',
                timer: 1200,
                showConfirmButton: false
            });
        }
    } catch (error) {
        Swal.fire('Error', 'Failed to remove item', 'error');
    }
}

function updateCartTotal() {
    let total = 0;
    document.querySelectorAll('.cart-item').forEach(item => {
        const priceText = item.querySelector('.item-total').textContent;
        const price = parseInt(priceText.replace(/[^\d]/g, '')) || 0;
        total += price;
    });

    const totalElements = document.querySelectorAll('#cartTotal, #orderTotal');
    totalElements.forEach(el => {
        el.textContent = '₹' + total.toLocaleString();
    });
}

// Optional: Run on page load to fix any stale button states
document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.cart-item').forEach(item => {
        const productId = item.dataset.productId;
        const qty = parseInt(item.querySelector('.quantity-display').textContent);
        const stock = parseInt(item.querySelector('.qty-btn:nth-child(3)').getAttribute('data-stock') || 999);

        const decreaseBtn = item.querySelector('.qty-btn:nth-child(1)');
        const increaseBtn = item.querySelector('.qty-btn:nth-child(3)');

        decreaseBtn.disabled = qty <= 1;
        increaseBtn.disabled = qty >= stock;
    });
});
</script>

