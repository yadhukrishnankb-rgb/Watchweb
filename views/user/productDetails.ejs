<style>
*, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }

:root {
  --green:      #4a5e4a;
  --green-dk:   #3a4a3a;
  --green-lt:   #5a7a5a;
  --bg:         #f0f4f0;
  --text:       #2a3a2a;
  --muted:      #7a9080;
  --line:       rgba(74,94,74,.12);
  --red:        #e8435a;
  --success:    #2ecc71;
}

body {
  font-family: 'Nunito', sans-serif;
  background: var(--bg);
  color: var(--text);
}

/* Custom CSS for Product Details UI */
.product-container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 2rem 1rem;
}

/* Breadcrumbs - Updated Colors */
.breadcrumbs {
  background: linear-gradient(135deg, #dde8dd, #e8f0e8);
  padding: 1rem 1.25rem;
  border-radius: 0.75rem;
  margin-bottom: 2rem;
  font-size: 0.875rem;
  line-height: 1.25rem;
  border: 1px solid var(--line);
}

.breadcrumbs a {
  color: var(--green);
  font-weight: 600;
  transition: color 0.2s ease;
}

.breadcrumbs a:hover {
  color: var(--green-dk);
}

/* Product Card - Updated */
.product-card {
  background: #ffffff;
  border-radius: 1.25rem;
  box-shadow: 0 4px 16px rgba(74,94,74, 0.08);
  transition: box-shadow 0.3s ease;
  border: 1px solid var(--line);
}

.product-card:hover {
  box-shadow: 0 10px 30px rgba(74,94,74, 0.12);
}

/* Image Gallery */
.image-gallery {
  padding: 1.5rem;
}

.main-image {
  border-radius: 0.75rem;
  transition: transform 0.3s ease;
}

.main-image:hover {
  transform: scale(1.02);
}

.thumbnail-btn {
  border-radius: 0.625rem;
  transition: all 0.2s ease;
  border: 2px solid transparent;
}

.thumbnail-btn:hover {
  transform: scale(1.05);
  border-color: var(--green) !important;
}

.thumbnail-btn.border-blue-500 {
  border-color: var(--green) !important;
}

/* Product Info */
.product-info h1 {
  font-size: 2rem;
  font-weight: 800;
  color: var(--text);
  line-height: 1.2;
}

.ratings {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

/* Price Section - Updated Colors */
.price-section {
  background: linear-gradient(135deg, #dde8dd, #e8f0e8);
  padding: 1.25rem;
  border-radius: 0.75rem;
  margin-top: 1rem;
  border: 1px solid var(--line);
}

.discount-tag {
  background: #d5f5e3;
  color: #1a7a45;
  padding: 0.375rem 0.75rem;
  border-radius: 0.5rem;
  font-weight: 700;
}

/* Stock Status - Updated Colors */
.text-green-600 {
  color: var(--green) !important;
  font-weight: 700;
}

/* Add to Cart Button - Updated Colors */
.add-to-cart-btn {
  background: linear-gradient(135deg, var(--green), var(--green-dk));
  padding: 0.875rem 1.5rem;
  border-radius: 0.75rem;
  font-size: 1rem;
  font-weight: 700;
  font-family: 'Nunito', sans-serif;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(74,94,74, 0.25);
  text-transform: uppercase;
  letter-spacing: 0.025em;
}

.add-to-cart-btn:hover:not(:disabled) {
  background: linear-gradient(135deg, var(--green-dk), #2a3a2a);
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(74,94,74, 0.35);
}

.add-to-cart-btn:disabled {
  background: #9ca3af;
  cursor: not-allowed;
  opacity: 0.7;
}

/* Buy Now Button */
.bg-green-600 {
  background: linear-gradient(135deg, #2ecc71, #27ae60) !important;
}

.bg-green-600:hover {
  background: linear-gradient(135deg, #27ae60, #229954) !important;
}

/* Reviews Section */
.reviews-section {
  margin-top: 3rem;
}

.review-card {
  background: #ffffff;
  border-radius: 0.75rem;
  padding: 1.5rem;
  box-shadow: 0 2px 8px rgba(74,94,74, 0.06);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  border: 1px solid var(--line);
}

.review-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 16px rgba(74,94,74, 0.12);
}

/* Related Products */
.related-products {
  margin-top: 3rem;
}

.related-product-card {
  background: #ffffff;
  border-radius: 0.75rem;
  overflow: hidden;
  transition: all 0.3s ease;
  border: 1px solid var(--line);
}

.related-product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(74,94,74, 0.12);
  border-color: var(--green);
}

.related-product-card img {
  transition: transform 0.3s ease;
}

.related-product-card:hover img {
  transform: scale(1.05);
}

/* Quantity Selector - Updated Colors */
.quantity-selector {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin: 1rem 0;
}

.quantity-btn {
  width: 2.5rem;
  height: 2.5rem;
  background: linear-gradient(135deg, #dde8dd, #e8f0e8);
  border: 2px solid #c8d8c8;
  border-radius: 0.625rem;
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--green);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  user-select: none;
}

.quantity-btn:hover:not(:disabled) {
  background: var(--green);
  color: white;
  border-color: var(--green);
  transform: translateY(-2px);
}

.quantity-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.quantity-input {
  width: 4rem;
  height: 2.5rem;
  text-align: center;
  border: 2px solid #c8d8c8;
  border-radius: 0.625rem;
  font-size: 1rem;
  font-weight: 700;
  font-family: 'Nunito', sans-serif;
  color: var(--text);
  background: white;
}

.quantity-input::-webkit-inner-spin-button,
.quantity-input::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Zoom Container */
.zoom-container {
  position: relative;
  width: 100%;
  max-width: 450px;
  background: linear-gradient(135deg, #dde8dd, #e8f0e8);
  border-radius: 0.75rem;
  padding: 1rem;
}

#mainImage {
  width: 100%;
  height: 450px;
  object-fit: contain;
  cursor: crosshair;
  border-radius: 0.5rem;
}

#zoomResult {
  position: absolute;
  top: 0;
  left: 105%;
  width: 450px;
  height: 450px;
  border: 2px solid var(--line);
  background-repeat: no-repeat;
  display: none;
  z-index: 10;
  border-radius: 0.75rem;
  box-shadow: 0 8px 24px rgba(74,94,74, 0.15);
}

/* Wishlist Button - Updated */
.wishlist-border {
  border-color: var(--green) !important;
}

/* Alert Box - Updated */
.bg-red-100 {
  background: #fde8ec !important;
}

.border-red-500 {
  border-color: var(--red) !important;
}

.text-red-700 {
  color: var(--red) !important;
}

/* Yellow Stars */
.text-yellow-400 {
  color: #fbbf24 !important;
}

/* Product Highlights */
.product-info h3 {
  font-size: 1.125rem;
  font-weight: 800;
  color: var(--green);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.product-info ul {
  color: var(--text);
}

.product-info ul li {
  font-weight: 600;
}

/* Offers Badge */
.bg-green-100 {
  background: #d5f5e3 !important;
}

.text-green-800 {
  color: #1a7a45 !important;
}

/* Responsive */
@media (max-width: 768px) {
  .product-container {
    padding: 1rem;
  }
  
  #mainImage {
    height: 300px;
  }
  
  #zoomResult {
    display: none !important;
  }
}
</style>

<main class="bg-gray-50 py-8">
  <div class="product-container">

    <!-- Breadcrumbs -->
    <nav class="breadcrumbs flex mb-6 text-sm">
      <% try { %>
        <% breadcrumbs.forEach((crumb, index)=> { %>
          <% if (index !==0) { %>
            <span class="mx-2 text-gray-500">/</span>
          <% } %>
          <% if (crumb.url) { %>
            <a href="<%= crumb.url %>" class="text-blue-600 hover:text-blue-800">
              <%= crumb.name %>
            </a>
          <% } else { %>
            <span class="text-gray-700">
              <%= crumb.name %>
            </span>
          <% } %>
        <% }); %>
      <% } catch (e) { %>
        <p style="color: red;">Error rendering breadcrumbs: <%= e.message %></p>
      <% } %>
    </nav>

    <!-- Product Details -->
    <div class="product-card bg-white rounded-xl shadow-sm overflow-hidden">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 p-6">

        <!-- Image Gallery with Zoom -->
        <div class="image-gallery space-y-4">
          <div class="zoom-container">
            <img id="mainImage" src="<%= product.productImage[0] %>" alt="<%= product.productName %>" />
            <div id="zoomResult"></div>
          </div>

          <div class="flex gap-2 overflow-x-auto py-2">
            <% product.productImage.forEach((img, index)=> { %>
              <button onclick="changeMainImage('<%= img %>', this)"
                class="thumbnail-btn w-20 h-20 rounded-lg overflow-hidden border-2 <%= index === 0 ? 'border-blue-500' : 'border-transparent' %>">
                <img src="<%= img %>" class="w-full h-full object-cover" alt="Product thumbnail">
              </button>
            <% }); %>
          </div>
        </div>

        <!-- Product Info -->
        <div class="product-info space-y-6">
          <h1 class="text-3xl font-bold">
            <%= product.productName %>
          </h1>

          <!-- Ratings -->
          <div class="ratings flex items-center gap-2">
            <div class="flex">
              <% for(let i=1; i <=5; i++) { %>
                <svg class="w-5 h-5 <%= i <= Math.round(averageRating) ? 'text-yellow-400' : 'text-gray-300' %>"
                  fill="currentColor" viewBox="0 0 20 20">
                  <path
                    d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              <% } %>
            </div>
            <span class="text-sm font-semibold" style="color: var(--muted);">
              <%= averageRating.toFixed(1) %> (<%= reviews.length %> reviews)
            </span>
          </div>

          <% if (product.isBlocked) { %>
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 mt-4" role="alert">
              <p class="font-bold">Unavailable</p>
              <p>This product is currently not available for purchase.</p>
            </div>
          <% } %>

          <!-- Price and Discounts -->
          <div class="price-section space-y-2">
            <div class="flex items-baseline gap-2">
              <% 
                let displayPrice = product.salesPrice;
                let originalPrice = null;
                if (product.productOffer && product.productOffer > 0) {
                    displayPrice = Math.round(product.salesPrice * (1 - product.productOffer/100) * 100) / 100;
                    originalPrice = product.salesPrice;
                } else if (product.regularPrice > product.salesPrice) {
                    originalPrice = product.regularPrice;
                }
              %>
              <span class="text-3xl font-bold" style="color: var(--green);">₹<%= displayPrice.toLocaleString() %></span>
              <% if (product.productOffer && product.productOffer> 0) { %>
                <span class="text-lg text-gray-500 line-through">₹<%= originalPrice.toLocaleString() %></span>
                <span class="discount-tag text-sm font-medium">
                  <%= product.productOffer %>% OFF
                </span>
              <% } else if (product.regularPrice> product.salesPrice) { %>
                <span class="text-lg text-gray-500 line-through">₹<%= originalPrice.toLocaleString() %></span>
                <span class="discount-tag text-sm font-medium">
                  <%= Math.round((product.regularPrice - product.salesPrice) / product.regularPrice * 100) %>% OFF
                </span>
              <% } %>
            </div>

            <% if (discounts && discounts.length> 0) { %>
              <div class="space-y-2">
                <h3 class="text-sm font-medium" style="color: var(--text);">Available Offers:</h3>
                <% discounts.forEach(discount=> { %>
                  <div class="flex items-center gap-2 text-sm">
                    <span class="px-2 py-1 bg-green-100 text-green-800 rounded">
                      <%= discount.code %>
                    </span>
                    <span class="font-semibold" style="color: var(--text);">
                      <%= discount.description %>
                    </span>
                  </div>
                <% }); %>
              </div>
            <% } %>
          </div>

          <!-- Stock Status -->
          <div class="<%= stockStatus === 'IN_STOCK' ? 'text-green-600' : 'text-red-600' %> font-bold">
            <% switch(stockStatus) { 
              case 'IN_STOCK' : %> In Stock (<%= product.quantity %> available) 
              <% break; case 'LOW_STOCK' : %> Only <%= product.quantity %> left in stock! 
              <% break; case 'SOLD_OUT' : %> Sold Out 
              <% break; case 'OUT_OF_STOCK' : %> Out of Stock 
              <% break; default: %> Currently Unavailable 
            <% } %>
          </div>

          <!-- QUANTITY SELECTOR -->
          <div class="quantity-selector">
            <button type="button" class="quantity-btn" id="decreaseQty" onclick="updateQuantity(-1)">-</button>
            <input type="number" class="quantity-input" id="quantityInput" value="1" min="1"
              max="<%= product.quantity %>" readonly>
            <button type="button" class="quantity-btn" id="increaseQty" onclick="updateQuantity(1)">+</button>
          </div>

          <!-- Add to Cart Button -->
          <button
            onclick="<%= product.isBlocked ? 'showUnavailableMessage()' : `addToCartWithQty('${product._id}')` %>"
            class="add-to-cart-btn w-full py-3 px-8 text-white font-medium <%= product.quantity <= 0 && !product.isBlocked ? 'opacity-50 cursor-not-allowed' : '' %>"
            <%=product.quantity <=0 && !product.isBlocked ? 'disabled' : '' %>>
            Add to Cart
          </button>

          <!-- Wishlist Button -->
          <button id="wishlistBtn" type="button"
            class="w-full mt-2 py-3 px-8 border-2 wishlist-border rounded-lg font-bold flex items-center justify-center gap-2"
            style="color: var(--green);"
            data-state="<%= isInWishlist ? 'remove' : 'add' %>" onclick="toggleWishlist('<%= product._id %>')">
            <svg id="wishlistIcon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500"
              viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd"
                d="M3.172 5.172a4 4 0 015.657 0L10 6.343l1.172-1.171a4 4 0 115.657 5.657L10 18.657l-6.829-7.828a4 4 0 010-5.657z"
                clip-rule="evenodd" />
            </svg>
            <span id="wishlistBtnText">
              <%= isInWishlist ? 'Remove from Wishlist' : 'Add to Wishlist' %>
            </span>
          </button>

          <!-- Buy Now → Direct Checkout -->
          <form action="/checkout/direct" method="POST" id="buyNowForm">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <input type="hidden" name="quantity" id="buyNowQuantity" value="1">
            <button type="<%= product.isBlocked ? 'button' : 'submit' %>"
              onclick="<%= product.isBlocked ? 'showUnavailableMessage()' : 'captureBuyNowQuantity()' %>"
              class="add-to-cart-btn w-full py-3 px-8 text-white font-medium bg-green-600 hover:bg-green-700 <%= product.quantity <= 0 && !product.isBlocked ? 'opacity-50 cursor-not-allowed' : '' %>"
              <%=product.quantity <=0 && !product.isBlocked ? 'disabled' : '' %>>
              Buy Now
            </button>
          </form>

          <!-- Product Highlights -->
          <div class="space-y-4">
            <h3>Product Highlights</h3>
            <ul class="list-disc list-inside space-y-2">
              <li>Brand: <%= product.brand %></li>
              <li>Color: <%= product.color %></li>
              <li>Category: <%= product.category.name %></li>
            </ul>
          </div>

          <!-- Product Description -->
          <div class="space-y-4">
            <h3>Description</h3>
            <p style="color: var(--text); font-weight: 600;">
              <%= product.description %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Reviews Section -->
    <div class="reviews-section mt-12">
      <h2 class="text-2xl font-bold mb-6" style="color: var(--green);">Customer Reviews</h2>
      <% if (reviews.length> 0) { %>
        <div class="space-y-6">
          <% reviews.forEach(review=> { %>
            <div class="review-card">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-2">
                  <div class="flex">
                    <% for(let i=1; i <=5; i++) { %>
                      <svg class="w-5 h-5 <%= i <= review.rating ? 'text-yellow-400' : 'text-gray-300' %>"
                        fill="currentColor" viewBox="0 0 20 20">
                        <path
                          d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                    <% } %>
                  </div>
                  <span class="font-bold" style="color: var(--text);">
                    <%= review.user.name %>
                  </span>
                </div>
                <span class="text-sm font-semibold" style="color: var(--muted);">
                  <%= new Date(review.createdAt).toLocaleDateString() %>
                </span>
              </div>
              <p class="font-semibold" style="color: var(--text);">
                <%= review.comment %>
              </p>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <p style="color: var(--muted); font-weight: 600;">No reviews yet.</p>
      <% } %>
    </div>

    <!-- Related Products -->
    <% if (relatedProducts.length> 0) { %>
      <div class="related-products mt-12">
        <h2 class="text-2xl font-bold mb-6" style="color: var(--green);">Related Products</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          <% relatedProducts.forEach(relatedProduct=> { %>
            <div class="related-product-card">
              <a href="/product/<%= relatedProduct._id %>">
                <img src="<%= relatedProduct.productImage[0] %>" alt="<%= relatedProduct.productName %>"
                  class="w-full h-48 object-cover">
                <div class="p-4">
                  <h3 class="font-bold mb-1" style="color: var(--text);">
                    <%= relatedProduct.productName %>
                  </h3>
                  <% 
                      let rpDisplay = relatedProduct.salesPrice;
                      let rpOriginal = null;
                      if (relatedProduct.productOffer && relatedProduct.productOffer > 0) {
                          rpDisplay = Math.round(relatedProduct.salesPrice * (1 - relatedProduct.productOffer/100) * 100) / 100;
                          rpOriginal = relatedProduct.salesPrice;
                      } else if (relatedProduct.regularPrice > relatedProduct.salesPrice) {
                          rpOriginal = relatedProduct.regularPrice;
                      }
                  %>
                  <p class="font-bold" style="color: var(--green);">₹<%= rpDisplay.toLocaleString() %></p>
                  <% if (rpOriginal) { %>
                    <p class="text-sm text-gray-500 line-through">₹<%= rpOriginal.toLocaleString() %></p>
                  <% } %>
                </div>
              </a>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>
  </div>
</main>

<script>
// Quantity Handler
function updateQuantity(change) {
  const input = document.getElementById('quantityInput');
  const buyNowInput = document.getElementById('buyNowQuantity');
  let current = parseInt(input.value) || 1;
  const max = parseInt(input.max) || 1;

  current = Math.max(1, Math.min(max, current + change));
  input.value = current;
  if (buyNowInput) buyNowInput.value = current;
}

function captureBuyNowQuantity() {
  const qty = document.getElementById('quantityInput').value;
  document.getElementById('buyNowQuantity').value = qty;
}

document.addEventListener('DOMContentLoaded', () => {
  updateQuantity(0);
});
</script>

<script>
const img = document.getElementById("mainImage");
const result = document.getElementById("zoomResult");

img.addEventListener("mousemove", moveZoom);
img.addEventListener("mouseenter", () => {
  result.style.display = "block";
  result.style.backgroundImage = `url('${img.src}')`;
  result.style.backgroundSize = "200%";
});
img.addEventListener("mouseleave", () => {
  result.style.display = "none";
});

function moveZoom(e) {
  const rect = img.getBoundingClientRect();
  const x = e.clientX - rect.left;
  const y = e.clientY - rect.top;

  const xPercent = (x / rect.width) * 100;
  const yPercent = (y / rect.height) * 100;

  result.style.backgroundPosition = `${xPercent}% ${yPercent}%`;
}

function changeMainImage(src, btn) {
  const main = document.getElementById("mainImage");
  const zoom = document.getElementById("zoomResult");

  main.src = src;
  zoom.style.backgroundImage = `url('${src}')`;

  document.querySelectorAll('.thumbnail-btn')
    .forEach(b => b.classList.remove('border-blue-500'));

  btn.classList.add('border-blue-500');
}

function showUnavailableMessage() {
  Swal.fire({
    icon: 'info',
    title: 'Item Unavailable',
    text: 'We apologize, but this item is currently unavailable for purchase.',
    confirmButtonColor: '#4a5e4a',
    confirmButtonText: 'OK'
  });
}
</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
async function addToCartWithQty(productId) {
  const qty = parseInt(document.getElementById('quantityInput').value) || 1;
  try {
    const res = await fetch('/cart/add', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ productId, quantity: qty })
    });
    const data = await res.json();

    if (data.success) {
      Swal.fire({ icon: 'success', title: 'Added to Cart!', toast: true, position: 'top-end', timer: 1500, showConfirmButton: false });
      const cartBadge = document.querySelector('.cart-count');
      if (cartBadge && data.cartCount !== undefined) cartBadge.textContent = data.cartCount;
      const wishlistBadge = document.querySelector('.wishlist-count');
      if (wishlistBadge && data.wishlistCount !== undefined) wishlistBadge.textContent = data.wishlistCount;
      try {
        const wlBtn = document.getElementById('wishlistBtn');
        const wlText = document.getElementById('wishlistBtnText');
        if (wlBtn) {
          wlBtn.setAttribute('data-state', 'add');
          if (wlText) wlText.textContent = 'Add to Wishlist';
        }
      } catch (e) { }
      return;
    }

    if (data.alreadyInCart) {
      Swal.fire({ icon: 'info', title: 'Already in cart', text: data.message || 'This product is already in your cart.', toast: true, position: 'top-end', timer: 2000, showConfirmButton: false });
      return;
    }

    if (data.redirect) location.href = '/shop';
    else throw new Error(data.message || 'Unknown error');
  } catch (err) {
    Swal.fire({ icon: 'error', title: 'Notice', text: err.message, toast: true, position: 'top-end', timer: 3000 });
  }
}

async function toggleWishlist(productId) {
  const btn = document.getElementById('wishlistBtn');
  const text = document.getElementById('wishlistBtnText');
  const state = btn ? btn.getAttribute('data-state') : 'add';

  try {
    if (state === 'add') {
      const res = await fetch('/wishlist/add', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ productId })
      });
      if (res.status === 401) return window.location.href = '/login';
      const data = await res.json();
      if (data.success) {
        if (btn) btn.setAttribute('data-state', 'remove');
        if (text) text.textContent = 'Remove from Wishlist';
        if (data.wishlistCount !== undefined) {
          const badge = document.querySelector('.wishlist-count'); if (badge) badge.textContent = data.wishlistCount;
        }
        Swal.fire({ icon: 'success', title: data.message || 'Added to wishlist', toast: true, position: 'top-end', timer: 1400, showConfirmButton: false });
        return;
      }
      if (data.alreadyInWishlist) {
        if (btn) btn.setAttribute('data-state', 'remove');
        if (text) text.textContent = 'Remove from Wishlist';
        Swal.fire({ icon: 'info', title: data.message || 'Already in wishlist', toast: true, position: 'top-end', timer: 1400, showConfirmButton: false });
        return;
      }
      throw new Error(data.message || 'Unable to add to wishlist');
    } else {
      const res = await fetch('/wishlist/remove', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ productId })
      });
      if (res.status === 401) return window.location.href = '/login';
      const data = await res.json();
      if (data.success) {
        if (btn) btn.setAttribute('data-state', 'add');
        if (text) text.textContent = 'Add to Wishlist';
        if (data.wishlistCount !== undefined) {
          const badge = document.querySelector('.wishlist-count'); if (badge) badge.textContent = data.wishlistCount;
        }
        Swal.fire({ icon: 'success', title: data.message || 'Removed from wishlist', toast: true, position: 'top-end', timer: 1400, showConfirmButton: false });
        return;
      }
      throw new Error(data.message || 'Unable to remove from wishlist');
    }
  } catch (err) {
    Swal.fire({ icon: 'error', title: 'Error', text: err.message || 'Something went wrong', toast: true, position: 'top-end', timer: 2000 });
  }
}
