<script>


//Tab Navigation - ONLY for tabs with data-tab
document.querySelectorAll('.nav-tab[data-tab]').forEach(tab => {
  tab.addEventListener('click', (e) => {
    e.preventDefault();
    const targetTab = tab.getAttribute('data-tab');

    // Remove active from all
    document.querySelectorAll('.nav-tab[data-tab]').forEach(t => t.classList.remove('active'));
    document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

    // Add active to clicked
    tab.classList.add('active');
    document.getElementById(targetTab).classList.add('active');
  });
});

// Highlight Address tab when on /profile/address
if (window.location.pathname === '/profile/address') {
  const addressTab = document.querySelector('.nav-tab[href="/profile/address"]');
  if (addressTab) {
    // Remove active from data-tab items
    document.querySelectorAll('.nav-tab[data-tab]').forEach(t => t.classList.remove('active'));
    addressTab.classList.add('active');
  }
}


if (window.location.pathname === '/profile/address') {
    document.querySelector('.nav-tab[href="/profile/address"]').classList.add('active');
}
</script>

