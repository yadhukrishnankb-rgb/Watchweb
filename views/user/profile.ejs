<%- include('../partials/user/header') %>
    <style>
        :root {
            --first-color: hsl(176, 88%, 27%);
            --first-color-alt: hsl(129, 44%, 94%);
            --second-color: hsl(60, 9%, 98%);
            --title-color: hsl(0, 0%, 13%);
            --text-color: hsl(154, 13%, 32%);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--first-color-alt) 0%, var(--second-color) 100%);
            min-height: 100vh;
            color: var(--text-color);
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .profile-container {
            background: white;
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .profile-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 120px;
            background: linear-gradient(135deg, var(--first-color) 0%, var(--first-color-alt) 100%);
            z-index: 1;
        }

        .profile-img {
            width: 120px !important;
            height: 120px;
            border-radius: 50% !important;
            border: 5px solid white;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            position: relative;
            z-index: 2;
            margin-bottom: 20px;
            object-fit: cover;
        }

        .profile-container h2 {
            color: var(--title-color);
            font-size: 2.5rem;
            margin-bottom: 10px;
            font-weight: 700;
            position: relative;
            z-index: 2;
        }

        .profile-info {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin: 30px 0;
            position: relative;
            z-index: 2;
        }

        .info-item {
            background: var(--first-color-alt);
            padding: 20px;
            border-radius: 15px;
            border-left: 4px solid var(--first-color);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .info-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        .info-item strong {
            color: var(--title-color);
            font-weight: 600;
            display: block;
            margin-bottom: 5px;
        }

        .address-section {
            background: white;
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .address-section h3 {
            color: var(--title-color);
            font-size: 1.8rem;
            margin-bottom: 20px;
            text-align: center;
            position: relative;
        }

        .address-section h3::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: var(--first-color);
            border-radius: 2px;
        }

        .address-item {
            background: var(--second-color);
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 15px;
            border-left: 4px solid var(--first-color);
            transition: transform 0.3s ease;
        }

        .address-item:hover {
            transform: translateX(10px);
        }

        .no-address {
            text-align: center;
            color: var(--text-color);
            font-style: italic;
            padding: 20px;
            background: var(--first-color-alt);
            border-radius: 10px;
        }

        .btn {
            display: inline-block;
            padding: 12px 30px;
            background: var(--first-color);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 600;
            margin: 10px;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            position: relative;
            z-index: 2;
        }

        .btn:hover {
            background: var(--title-color);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        }

        .orders-section {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .orders-section h3 {
            color: var(--title-color);
            font-size: 1.8rem;
            margin-bottom: 25px;
            text-align: center;
            position: relative;
        }

        .orders-section h3::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: var(--first-color);
            border-radius: 2px;
        }

        .order-item {
            background: var(--first-color-alt);
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 20px;
            border-left: 4px solid var(--first-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .order-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .order-info {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .order-info span {
            color: var(--text-color);
            font-weight: 500;
        }

        .order-id {
            color: var(--title-color) !important;
            font-weight: 700;
        }

        .order-status {
            display: inline-block;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .status-placed {
            background: var(--second-color);
            color: var(--title-color);
        }

        .status-shipped {
            background: var(--first-color);
            color: white;
        }

        .status-delivered {
            background: #4CAF50;
            color: white;
        }

        .order-actions {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .btn-small {
            padding: 8px 20px;
            font-size: 0.9rem;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

        .btn-view {
            background: var(--first-color);
            color: white;
        }

        .btn-view:hover {
            background: var(--title-color);
            transform: translateY(-2px);
        }

        .btn-cancel {
            background: #ff4757;
            color: white;
        }

        .btn-cancel:hover {
            background: #ff3838;
            transform: translateY(-2px);
        }

        .no-orders {
            text-align: center;
            color: var(--text-color);
            font-style: italic;
            padding: 40px;
            background: var(--first-color-alt);
            border-radius: 15px;
        }

        @media (max-width: 768px) {
            .container {
                padding: 10px;
            }
            
            .profile-container {
                padding: 30px 20px;
            }
            
            .profile-container h2 {
                font-size: 2rem;
            }
            
            .info-item {
                padding: 15px;
            }
            
            .order-item {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .order-actions {
                width: 100%;
                justify-content: flex-end;
            }
        }
    </style>

     <div class="container">
        <!-- Profile Section -->
        <div class="profile-container">
            <img src="<%= user.profileImage || 'https://via.placeholder.com/120' %>" class="profile-img" alt="Profile Image">
            <h2><%= user.name %></h2>
            <div class="profile-info">
                <div class="info-item">
                    <strong>Email:</strong>
                    <%= user.email %>
                </div>
                <div class="info-item">
                    <strong>Phone:</strong>
                    <%= user.phone %>
                </div>
            </div>
            <a href="/profile/edit" class="btn">Edit Profile</a>
            <a href="/profile/change-password" class="btn">Change Password</a>
        </div>

        <!-- Address Section -->
        <div class="address-section">
            <h3>Address</h3>
            <% if (user.addresses && user.addresses.length > 0) { %>
                <% user.addresses.forEach(addr => { %>
                    <div class="address-item">
                        <%= addr.line1 %>, <%= addr.city %>, <%= addr.state %>, <%= addr.zip %>, <%= addr.country %>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="no-address">No address added.</div>
            <% } %>
        </div>

        <!-- Orders Section -->
        <div class="orders-section">
            <h3>Your Orders</h3>
            <% if (orders && orders.length > 0) { %>
                <% orders.forEach(order => { %>
                    <div class="order-item">
                        <div class="order-info">
                            <span class="order-id">Order #: <%= order._id %></span>
                            <span class="order-status 
                                <% if(order.status === 'Placed'){ %>status-placed<% } %>
                                <% if(order.status === 'Shipped'){ %>status-shipped<% } %>
                                <% if(order.status === 'Delivered'){ %>status-delivered<% } %>
                                ">
                                <%= order.status %>
                            </span>
                        </div>
                        <div class="order-actions">
                            <a href="/order/<%= order._id %>" class="btn-small btn-view">View</a>
                            <% if (order.status === 'Placed') { %>
                                <form action="/order/<%= order._id %>/cancel" method="POST" style="display: inline;">
                                    <button type="submit" class="btn-small btn-cancel">Cancel Order</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="no-orders">You have no orders yet.</div>
            <% } %>
        </div>
    </div>

    <%- include('../partials/user/footer') %>