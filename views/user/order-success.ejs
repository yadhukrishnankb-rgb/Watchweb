    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: #f5f5f5;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .success-container {
            max-width: 600px;
            width: 100%;
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            animation: slideUp 0.6s ease-out;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .success-header {
            background: linear-gradient(135deg, #5a7568 0%, #6d8b7e 100%);
            padding: 3rem 2rem;
            text-align: center;
            position: relative;
        }

        .success-icon-wrapper {
            margin-bottom: 1.5rem;
            animation: scaleIn 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        }

        @keyframes scaleIn {
            from {
                transform: scale(0) rotate(-180deg);
                opacity: 0;
            }
            to {
                transform: scale(1) rotate(0);
                opacity: 1;
            }
        }

        .success-icon {
            width: 120px;
            height: 120px;
            background: white;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            position: relative;
        }

        .success-icon::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            border: 3px solid rgba(255, 255, 255, 0.5);
            border-radius: 50%;
            animation: pulse 2s ease-out infinite;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
                opacity: 1;
            }
            100% {
                transform: scale(1.3);
                opacity: 0;
            }
        }

        .success-icon i {
            font-size: 3.5rem;
            color: #5a7568;
        }

        .success-title {
            font-size: 2.2rem;
            font-weight: 800;
            color: white;
            margin-bottom: 0.5rem;
        }

        .success-subtitle {
            font-size: 1.1rem;
            color: rgba(255, 255, 255, 0.9);
        }

        .success-body {
            padding: 2.5rem;
            text-align: center;
        }

        .thank-you-section {
            margin-bottom: 2rem;
        }

        .thank-you-title {
            font-size: 1.6rem;
            font-weight: 700;
            color: #2d3436;
            margin-bottom: 1rem;
        }

        .thank-you-text {
            font-size: 1.05rem;
            color: #636e72;
            line-height: 1.7;
            margin-bottom: 0.75rem;
        }

        .highlight {
            color: #5a7568;
            font-weight: 600;
        }

        .illustration {
            margin: 2rem 0;
            animation: fadeIn 0.8s ease-out 0.4s both;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .illustration svg {
            width: 100%;
            max-width: 280px;
            height: auto;
        }

        .order-info {
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 1.5rem;
            margin: 2rem 0;
            animation: fadeIn 0.8s ease-out 0.6s both;
        }

        .order-label {
            font-size: 0.85rem;
            font-weight: 600;
            color: #868e96;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 0.5rem;
        }

        .order-id {
            font-size: 1.4rem;
            font-weight: 800;
            color: #5a7568;
            font-family: 'Courier New', monospace;
            letter-spacing: 1px;
        }

        .button-group {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-top: 2rem;
            animation: fadeIn 0.8s ease-out 0.8s both;
        }

        .btn {
            padding: 1rem 2rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background: #5a7568;
            color: white;
            box-shadow: 0 4px 15px rgba(90, 117, 104, 0.3);
        }

        .btn-primary:hover {
            background: #4a6558;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(90, 117, 104, 0.4);
        }

        .btn-secondary {
            background: white;
            color: #5a7568;
            border: 2px solid #5a7568;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .btn-secondary:hover {
            background: #f8f9fa;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(90, 117, 104, 0.2);
        }

        .delivery-note {
            margin-top: 2rem;
            padding: 1rem;
            background: #e8f5e9;
            border-radius: 8px;
            animation: fadeIn 0.8s ease-out 1s both;
        }

        .delivery-note p {
            font-size: 0.95rem;
            color: #2e7d32;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .delivery-note i {
            font-size: 1.2rem;
        }

        @media (max-width: 640px) {
            .success-header {
                padding: 2.5rem 1.5rem;
            }

            .success-icon {
                width: 100px;
                height: 100px;
            }

            .success-icon i {
                font-size: 3rem;
            }

            .success-title {
                font-size: 1.8rem;
            }

            .success-body {
                padding: 2rem 1.5rem;
            }

            .thank-you-title {
                font-size: 1.4rem;
            }

            .illustration svg {
                max-width: 220px;
            }
        }
    </style>
