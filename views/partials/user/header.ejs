    <style>
      /* ============================================
         EVERTIME LOGO STYLES
         ============================================ */
      
      .nav__logo {
        display: flex;
        align-items: center;
        text-decoration: none;
        gap: 0.5rem;
      }
      
      .nav__logo-container {
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }
      
      /* Logo Icon */
      .logo-icon {
        width: 45px;
        height: 45px;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      /* Animated Clock Circle */
      .clock-circle {
        position: absolute;
        width: 100%;
        height: 100%;
        border: 3px solid rgb(8, 129, 121);
        border-radius: 50%;
        animation: rotateClock 20s linear infinite;
      }
      
      .clock-circle::before {
        content: '';
        position: absolute;
        top: 2px;
        left: 50%;
        transform: translateX(-50%);
        width: 4px;
        height: 4px;
        background: rgb(8, 129, 121);
        border-radius: 50%;
      }
      
      @keyframes rotateClock {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
      }
      
      /* Center E Letter */
      .logo-letter {
        font-size: 1.5rem;
        font-weight: 800;
        color: rgb(8, 129, 121);
        font-family: 'Arial', sans-serif;
        z-index: 1;
      }
      
      /* Logo Text */
      .logo-text {
        display: flex;
        flex-direction: column;
        line-height: 1;
      }
      
      .logo-text-main {
        font-size: 1.5rem;
        font-weight: 800;
        color: #1f2937;
        letter-spacing: -0.5px;
        font-family: 'Arial', sans-serif;
      }
      
      .logo-text-main .text-accent {
        color: rgb(8, 129, 121);
      }
      
      .logo-text-tagline {
        font-size: 0.65rem;
        color: #6b7280;
        letter-spacing: 1px;
        text-transform: uppercase;
        font-weight: 500;
        margin-top: 2px;
      }
      
      /* Hover Effects */
      .nav__logo:hover .clock-circle {
        border-color: #047857;
        animation: rotateClock 2s linear infinite;
      }
      
      .nav__logo:hover .logo-letter {
        color: #047857;
        transform: scale(1.1);
        transition: all 0.3s ease;
      }
      
      .nav__logo:hover .logo-text-main {
        color: rgb(8, 129, 121);
        transition: color 0.3s ease;
      }
      
      /* Mobile Menu Logo */
      .nav__menu-logo {
        display: flex;
        align-items: center;
        text-decoration: none;
      }
      
      .nav__menu-logo .nav__logo-container {
        gap: 0.5rem;
      }
      
      .nav__menu-logo .logo-icon {
        width: 40px;
        height: 40px;
      }
      
      .nav__menu-logo .logo-text-main {
        font-size: 1.3rem;
      }
      
      /* Responsive */
      @media (max-width: 768px) {
        .logo-icon {
          width: 38px;
          height: 38px;
        }
        
        .logo-letter {
          font-size: 1.3rem;
        }
        
        .logo-text-main {
          font-size: 1.3rem;
        }
        
        .logo-text-tagline {
          font-size: 0.55rem;
        }
      }
      
      @media (max-width: 480px) {
        .logo-text-tagline {
          display: none;
        }
      }






