        <a href="/" class="nav__logo">
          <div class="nav__logo-container">
            <div class="logo-icon">
              <div class="clock-circle"></div>
              <span class="logo-letter">E</span>
            </div>
            <div class="logo-text">
              <span class="logo-text-main">Ever<span class="text-accent">Time</span></span>
              <span class="logo-text-tagline">Timeless Shopping</span>
            </div>
          </div>
        </a>
       
        <div class="nav__menu" id="nav-menu">
          <div class="nav__menu-top">
            <!-- Mobile Menu Logo -->
            <a href="/" class="nav__menu-logo">
              <div class="nav__logo-container">
                <div class="logo-icon">
                  <div class="clock-circle"></div>
                  <span class="logo-letter">E</span>
                </div>
                <div class="logo-text">
                  <span class="logo-text-main">Ever<span class="text-accent">Time</span></span>
                  <span class="logo-text-tagline">Timeless Shopping</span>
                </div>
              </div>
            </a>
            <div class="nav__close" id="nav-close">
              <i class="fi fi-rs-cross-small"></i>
            </div>
          </div>
          <ul class="nav__list">
            <li class="nav__item">
              <a href="/" class="nav__link">Home</a>
            </li>
            <li class="nav__item">
              <a href="/shop" class="nav__link">Shop</a>
            </li>
            <li class="nav__item">
              <a href="/orders" class="nav__link">My Orders</a>
            </li>
            
            
          </ul>
       
          
<div class="header__search">
  <form action="/search" method="GET" class="search-form">
    <div class="search-input-wrapper">
      <i class="fi fi-rs-search search-icon"></i>
      <input
        type="text"
        name="q"
