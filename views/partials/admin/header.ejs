<script>

  function toggleDropdown() {

    const menu = document.getElementById('dropdownMenu');

    menu.classList.toggle('hidden');

  }



  /* =========================

     ADMIN BACK-BUTTON GUARD

     ========================= */

  (function () {

    if (!location.pathname.startsWith('/admin')) return;



    if (window.__adminBackGuard) return;

    window.__adminBackGuard = true;



    const DASHBOARD = '/admin/dashboard';

    const DEBOUNCE = 600;

    const KEY = 'admin_back_ts';

    let handling = false;



    history.replaceState({ guard: true }, '', location.href);

    history.pushState({ guard: true }, '', location.href);



    const onBack = (e) => {

      if (e.state && e.state.guard) return;

      if (handling) return;



      const now = Date.now();

      const last = Number(sessionStorage.getItem(KEY) || 0);

      if (now - last < DEBOUNCE) return;



      sessionStorage.setItem(KEY, String(now));

      handling = true;



      const win = window.open(DASHBOARD, '_blank', 'noopener,noreferrer');



      if (!win) {

        window.location.replace(DASHBOARD);

      } else {

        try { history.pushState({ guard: true }, '', location.href); } catch (_) {}

      }



      setTimeout(() => { handling = false; }, DEBOUNCE);

    };



    window.addEventListener('popstate', onBack, { passive: true });

  })();

</script>



