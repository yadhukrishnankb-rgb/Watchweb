    .admin-logo-icon { width:40px; height:40px; position:relative; display:flex; align-items:center; justify-content:center; flex-shrink:0; }

    .admin-clock-circle { position:absolute; width:100%; height:100%; border:3px solid #10b981; border-radius:50%; animation: rotateClockAdmin 20s linear infinite; }

    .admin-clock-circle::before { content:''; position:absolute; top:2px; left:50%; transform:translateX(-50%); width:4px; height:4px; background:#10b981; border-radius:50%; }

    @keyframes rotateClockAdmin { from { transform:rotate(0deg); } to { transform:rotate(360deg); } }

    .admin-logo-letter { font-size:1.4rem; font-weight:800; color:#10b981; font-family:'Arial',sans-serif; z-index:1; }

