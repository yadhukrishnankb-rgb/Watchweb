    .admin-logo-container:hover .admin-logo-letter { color:#34d399; transform:scale(1.1); transition:all 0.3s ease; }

    .admin-logo-container:hover .admin-logo-text-main .text-accent { color:#34d399; transition:color 0.3s ease; }

