<%- include('../partials/admin/header') %>

<div class="flex-1 p-8">
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Customer Management</h1>
    </div>

    <!-- Customers Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (customers && customers.length > 0) { %>
                    <% customers.forEach(customer => { %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <%= customer.name %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <%= customer.email %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                    <%= customer.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                    <%= customer.status === 'active' ? 'Active' : 'Blocked' %>
                                </span>
                            </td>

                            <td class="px-6 py-4 whitespace-nowrap">
                                <% if (customer.status === 'active') { %>
                                    <form action="/admin/customers/block/<%= customer._id %>?page=<%= currentPage %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" method="POST" class="inline confirm-action" data-action="block" data-name="<%= customer.name %>">
                                        <button type="submit" class="text-red-600 hover:text-red-900">Block</button>
                                    </form>
                                <% } else { %>
                                    <form action="/admin/customers/unblock/<%= customer._id %>?page=<%= currentPage %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" method="POST" class="inline confirm-action" data-action="unblock" data-name="<%= customer.name %>">
                                        <button type="submit" class="text-green-600 hover:text-green-900">Unblock</button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="px-6 py-4 text-center text-gray-500">
                            No customers found
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
        <div class="mt-6 flex justify-center items-center gap-2">
            <% let prevPage = Math.max(1, currentPage - 1); %>
            <a href="/admin/customers?page=<%= prevPage %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="px-3 py-1 border rounded <% if (currentPage===1) { %>opacity-50 pointer-events-none<% } %>">Prev</a>

            <% pages.forEach(page => { %>
                <a href="/admin/customers?page=<%= page %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="px-3 py-1 border rounded <% if (page === currentPage) { %>bg-blue-600 text-white<% } else { %>text-gray-700<% } %>"><%= page %></a>
            <% }) %>

            <% let nextPage = Math.min(totalPages, currentPage + 1); %>
            <a href="/admin/customers?page=<%= nextPage %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="px-3 py-1 border rounded <% if (currentPage===totalPages) { %>opacity-50 pointer-events-none<% } %>">Next</a>
        </div>
    <% } %>
</div>

<!-- Include SweetAlert2 and confirmation script (unchanged) -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.confirm-action').forEach(function(form) {
        form.addEventListener('submit', function (e) {
            e.preventDefault();
            const action = form.dataset.action || 'perform this action';
            const name = form.dataset.name || 'the user';
            const verb = action === 'block' ? 'Block' : (action === 'unblock' ? 'Unblock' : 'Confirm');
            const confirmColor = action === 'block' ? '#e74c3c' : '#16a34a';

            Swal.fire({
                title: `${verb} ${name}?`,
                text: `Are you sure you want to ${action} ${name}?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: confirmColor,
                cancelButtonColor: '#6b7280',
                confirmButtonText: verb,
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    });
});
</script>

<%- include('../partials/admin/footer') %>
