<%- include('../partials/admin/header') %>

<div class="flex-1 p-8">
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Customer Management</h1>
    </div>

    <!-- Customers Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (customers && customers.length > 0) { %>
                    <% customers.forEach(customer => { %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <%= customer.name %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <%= customer.email %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                    <%= customer.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                    <%= customer.status === 'active' ? 'Active' : 'Blocked' %>
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <% if (customer.status === 'active') { %>
                                    <form action="/admin/customers/block/<%= customer._id %>" method="POST" class="inline">
                                        <button type="submit" class="text-red-600 hover:text-red-900">Block</button>
                                    </form>
                                <% } else { %>
                                    <form action="/admin/customers/unblock/<%= customer._id %>" method="POST" class="inline">
                                        <button type="submit" class="text-green-600 hover:text-green-900">Unblock</button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="px-6 py-4 text-center text-gray-500">
                            No customers found
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <% if (totalPages > 1) { %>
        <div class="mt-6 flex justify-center">
            <!-- ... pagination code ... -->
        </div>
    <% } %>
</div>

<%- include('../partials/admin/footer') %>