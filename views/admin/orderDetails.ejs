<!-- views/admin/orderDetails.ejs -->
<%- include('../partials/admin/header') %>
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<main class="p-6 bg-gray-50 min-h-screen">
  <div class="max-w-6xl mx-auto">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Order: <%= order.orderId %></h1>
      <a href="/admin/orders" class="px-4 py-2 bg-gray-600 text-white rounded">← Back</a>
    </div>

    <div class="bg-white p-6 rounded shadow">
      <div class="grid md:grid-cols-2 gap-8 mb-6">
        <div>
          <h3 class="font-bold mb-2">Customer</h3>
          <p><%= order.user?.name || order.address?.fullName || order.address?.name || 'N/A' %></p>
          <% if (order.user?.email || order.address?.email) { %>
            <p><%= order.user?.email || order.address?.email %></p>
          <% } %>
          <p><%= order.user?.phone || order.address?.phone || order.address?.altPhone || 'Not provided' %></p>
        </div>
        <div>
          <h3 class="font-bold mb-2">Delivery Address</h3>
          <% const a = order.address || {};
             const addrLine1 = a.line1 || a.addressLine1 || a.address || '';
             const addrLine2 = a.street || a.streetAddress || a.addressLine2 || '';
             const lm = a.landmark || a.addressLine2 || a.landmarkDescription || '';
             const locality = a.locality || '';
             const city = a.city || a.cityName || '';
             const state = a.state || a.stateName || '';
             const pincode = a.pincode || a.postalCode || a.zip || a.pin || '';
          %>
          <% if (addrLine1) { %>
            <p><strong>Address Line:</strong> <%= addrLine1 %></p>
          <% } %>
          <% if (addrLine2 || locality) { %>
            <p><%= addrLine2 %><%= locality ? ', ' + locality : '' %></p>
          <% } %>
          <% if (lm) { %>
            <p><strong>Landmark:</strong> <%= lm %></p>
          <% } %>
          <p><%= city %> <% if (state) { %>, <%= state %><% } %> - <%= pincode %></p>
        </div>
      </div>

      <div class="mb-6">
 <label class="block font-medium mb-2">Update Status</label>
<form id="statusForm" class="flex gap-3 items-end">
  <select name="status" id="statusSelect" class="px-4 py-2 border rounded-lg text-sm" required>
    <%
      // === NORMALIZE CURRENT STATUS (handles any case/spacing) ===
      const current = (order.status || 'Pending').trim();

      // === EXACT ALLOWED TRANSITIONS (strict as you wanted) ===
      const transitions = {
        'Pending':           ['Processing', 'Cancelled'],
        'Processing':        ['Shipped', 'Cancelled'],
        'Shipped':           ['Out for Delivery'],
        'Out for Delivery': ['Delivered'],
        'Delivered':         ['Return Request'],
        'Return Request':    ['Returned'],           // only admin can approve return
        'Cancelled':         [],
        'Returned':          []
      };

      // Find the correct key even if stored lowercase or with extra spaces
      const currentKey = Object.keys(transitions).find(key => 
        key.toLowerCase() === current.toLowerCase()
      ) || 'Pending';

      let allowed = transitions[currentKey] || [];

      // Always include the current status so it's visible and selected
      if (!allowed.includes(currentKey)) {
        allowed = [currentKey, ...allowed];
      }
    %>

    <% allowed.forEach(status => { %>
      <option value="<%= status %>" <%= status === currentKey ? 'selected' : '' %>>
        <%= status %> <%= status === currentKey ? '(Current)' : '' %>
      </option>
    <% }) %>

    <% if (allowed.length === 1 && ['Cancelled', 'Returned'].includes(currentKey)) { %>
      <option disabled>— This is a final status —</option>
    <% } %>

    <% if (allowed.length === 0) { %>
      <option disabled>No actions available</option>
    <% } %>
  </select>

  <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
    Update Status
  </button>
</form>

<% if (['Cancelled', 'Returned'].includes(currentKey)) { %>
  <p class="text-sm text-gray-600 mt-2">This order is in a final state. No further changes allowed.</p>
<% } %>

      <div class="mb-6">
        <p><strong>Current Status:</strong>
          <span class="inline-block px-3 py-1 text-sm rounded <%= 
            order.status.toLowerCase().includes('delivered') ? 'bg-green-100 text-green-800' :
            order.status.toLowerCase().includes('return') ? 'bg-yellow-100 text-yellow-800' :
            order.status.toLowerCase() === 'returned' ? 'bg-orange-100 text-orange-800' :
            order.status.toLowerCase() === 'cancelled' ? 'bg-red-100 text-red-800' :
            'bg-blue-100 text-blue-800' %>">
            <%= order.status %>
          </span>
        </p>
        <!-- <% if (order.pendingCancelTime) { %>
          <p class="text-xs text-gray-600 mt-2">
            Auto-cancel pending after: <%= new Date(order.pendingCancelTime).toLocaleString() %>
          </p>
        <% } %> -->
      </div>

      <h3 class="font-bold text-lg mb-3">Items</h3>
      <table class="w-full border">
        <thead class="bg-gray-100">
          <tr>
            <th class="p-3 text-left">Product</th>
            <th class="p-3">Qty</th>
            <th class="p-3">Price</th>
            <th class="p-3">Tax</th>
            <th class="p-3">Total</th>
            <th class="p-3 text-center">Status</th>

          </tr>
        </thead>
        <tbody>
  <% order.orderedItems.forEach(item => { 
       const itemStatus = item.status || 'Pending';
       const subtotal = Number(order.subtotal || 0);
       const totalTax = Number(order.tax || 0);
       const itemSubtotal = Number(item.totalPrice || (item.price * item.quantity) || 0);
       const itemTax = subtotal > 0 ? (itemSubtotal / subtotal) * totalTax : 0;
       const itemTaxRounded = Math.round((itemTax + Number.EPSILON) * 100) / 100;
  %>
    <tr class="border-t">
      <td class="p-3 flex items-center gap-3">
        <img src="<%= item.product.productImage[0] %>" 
             class="w-12 h-12 object-cover rounded">
        <%= item.product.productName %>
      </td>

      <td class="p-3 text-center"><%= item.quantity %></td>
      <td class="p-3">₹<%= item.price %></td>
      <td class="p-3">₹<%= itemTaxRounded.toFixed(2) %></td>
      <td class="p-3 font-bold">
        ₹<%= item.price * item.quantity %>
      </td>

      <!-- ✅ STATUS COLUMN -->
      <td class="p-3 text-center">
        <span class="
          px-3 py-1 text-sm rounded font-medium
          <%= itemStatus === 'Delivered' ? 'bg-green-100 text-green-800' :
              itemStatus === 'Cancelled' ? 'bg-red-100 text-red-800' :
              itemStatus === 'Returned' ? 'bg-orange-100 text-orange-800' :
              itemStatus === 'Return Request' ? 'bg-yellow-100 text-yellow-800' :
              itemStatus === 'Cancellation Request' ? 'bg-pink-100 text-pink-800' :
              itemStatus === 'Processing' ? 'bg-purple-100 text-purple-800' :
              itemStatus === 'Shipped' ? 'bg-indigo-100 text-indigo-800' :
              itemStatus === 'Out for Delivery' ? 'bg-blue-100 text-blue-800' :
              'bg-gray-100 text-gray-800' %>
        ">
          <%= itemStatus %>
        </span>
      </td>
    </tr>
  <% }) %>
</tbody>

      </table>

      <div class="text-right mt-6 text-xl font-bold">
        Final Amount: ₹<%= order.finalAmount.toLocaleString() %>
      </div>
    </div>
  </div>
</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$('#statusForm').on('submit', function(e) {
  e.preventDefault();
  
  const status = $('#statusSelect').val();
  
  $.ajax({
    url: '/admin/orders/<%= order._id %>/status',
    method: 'PATCH',
    data: { status: status },
    success: function(res) {
      if (res.success) {
        location.reload(); // refresh page to see new status
      }
    },
    error: function(xhr) {
      const msg = xhr.responseJSON?.message || 'Update failed';
      alert(msg);
    }
  });
});
</script>
<%- include('../partials/admin/footer') %>