<!-- views/admin/orderDetails.ejs -->
<%- include('../partials/admin/header') %>
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<main class="p-6 bg-gray-50 min-h-screen">
  <div class="max-w-6xl mx-auto">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Order: <%= order.orderId %></h1>
      <a href="/admin/orders" class="px-4 py-2 bg-gray-600 text-white rounded">← Back</a>
    </div>

    <div class="bg-white p-6 rounded shadow">
      <div class="grid md:grid-cols-2 gap-8 mb-6">
        <div>
          <h3 class="font-bold mb-2">Customer</h3>
          <p><%= order.address?.name %></p>
          <p><%= order.address?.email %></p>
          <p><%= order.address?.phone %></p>
        </div>
        <div>
          <h3 class="font-bold mb-2">Delivery Address</h3>
          <p><%= order.address?.street %>, <%= order.address?.city %></p>
          <p><%= order.address?.state %> - <%= order.address?.pincode %></p>
        </div>
      </div>

      <div class="mb-6">
  <label class="block font-medium mb-2">Update Status</label>
  <form id="statusForm" class="flex gap-3">
    <select name="status" class="px-3 py-2 border rounded">
      <% 
        const current = (order.status || '').toLowerCase();

        const statusMap = {
          pending: ['Processing', 'Cancelled'],
          processing: ['Shipped', 'Cancelled'],
          shipped: ['Delivered'],
          delivered: ['Return Request'],
          'return request': ['Returned', 'Delivered'],
          'cancellation request': ['Cancelled', 'Pending'],
          cancelled: [],
          returned: []
        };

        const allowedStatuses = statusMap[current] || [];
        const allStatuses = ['Pending','Processing','Shipped','Delivered','Cancelled','Return Request','Returned'];

        // Always show current status + allowed next ones
        const displayStatuses = [...new Set([order.status, ...allowedStatuses])];
      %>

      <% displayStatuses.forEach(s => { %>
        <option value="<%= s %>" <%= order.status === s ? 'selected' : '' %>>
          <%= s %>
          <% if (order.status === s) { %> (Current) <% } %>
        </option>
      <% }) %>

      <% if (displayStatuses.length === 1 && ['cancelled','returned'].includes(current)) { %>
        <option disabled>— No further changes allowed —</option>
      <% } %>
    </select>
    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
      Update Status
    </button>
  </form>

  <!-- Optional: Show helpful message -->
  <% if (['cancelled','returned'].includes(current)) { %>
    <p class="text-sm text-gray-600 mt-2">This order is in final state. No further changes allowed.</p>
  <% } %>
</div>

      <div class="mb-6">
        <p><strong>Current Status:</strong>
          <span class="inline-block px-3 py-1 text-sm rounded <%= order.status.toLowerCase().includes('delivered') ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
            <%= order.status %>
          </span>
        </p>
      </div>

      <h3 class="font-bold text-lg mb-3">Items</h3>
      <table class="w-full border">
        <thead class="bg-gray-100">
          <tr>
            <th class="p-3 text-left">Product</th>
            <th class="p-3">Qty</th>
            <th class="p-3">Price</th>
            <th class="p-3">Total</th>
          </tr>
        </thead>
        <tbody>
          <% order.orderedItems.forEach(item => { %>
            <tr class="border-t">
              <td class="p-3 flex items-center gap-3">
                <img src="<%= item.product.productImage[0] %>" class="w-12 h-12 object-cover rounded">
                <%= item.product.productName %>
              </td>
              <td class="p-3 text-center"><%= item.quantity %></td>
              <td class="p-3">₹<%= item.price %></td>
              <td class="p-3 font-bold">₹<%= item.price * item.quantity %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div class="text-right mt-6 text-xl font-bold">
        Final Amount: ₹<%= order.finalAmount.toLocaleString() %>
      </div>
    </div>
  </div>
</main>

<script>
$('#statusForm').on('submit', function(e) {
  e.preventDefault();
  const status = $(this).find('select').val();
  $.ajax({
    url: '/admin/orders/<%= order._id %>/status',
    method: 'PATCH',
    data: { status },
    success: () => location.reload(),
    error: () => alert('Update failed')
  });
});
</script>
<%- include('../partials/admin/footer') %>